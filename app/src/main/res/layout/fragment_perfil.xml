<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:fontFamily="@font/comfortaa_bold"
                    android:text="WePerfil!"
                    android:textColor="#Ffff"
                    android:textSize="40dp"/>
                    <Button
                        android:layout_width="190px"
                        android:layout_height="200px"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/img_profile"

                        />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/botones_inicio"
                            android:orientation="horizontal"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginTop="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:fontFamily="@font/comfortaa"
                                android:text="Nombre de Usuario"
                                android:textColor="#C7D4B8" />

                                <TextView
                                    android:id="@+id/txt_user"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/comfortaa"
                                    android:scrollHorizontally="true"
                                    android:text="Usuario"
                                    android:textColor="#FFFFFF"
                                    android:textSize="25dp" />
                                </LinearLayout>

                        </LinearLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/botones_inicio"
                            android:orientation="horizontal"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginTop="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_marginTop="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:fontFamily="@font/comfortaa"
                                    android:text="Número de telefono"
                                    android:textColor="#C7D4B8" />

                                <TextView
                                    android:id="@+id/txt_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/comfortaa"
                                    android:scrollHorizontally="true"
                                    android:text="Phone"
                                    android:textColor="#FFFFFF"
                                    android:textSize="25dp" />
                            </LinearLayout>

                        </LinearLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/botones_inicio"
                            android:orientation="horizontal"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginTop="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_marginTop="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:fontFamily="@font/comfortaa"
                                    android:text="Correo Electronico"
                                    android:textColor="#C7D4B8" />

                                <TextView
                                    android:id="@+id/txt_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/comfortaa"
                                    android:scrollHorizontally="true"
                                    android:text="Correo"
                                    android:textColor="#FFFFFF"
                                    android:textSize="25dp" />
                            </LinearLayout>

                        </LinearLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/botones_inicio"
                            android:orientation="horizontal"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginTop="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_marginTop="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:fontFamily="@font/comfortaa"
                                    android:text="Número total de recipientes"
                                    android:textColor="#C7D4B8" />

                                <TextView
                                    android:id="@+id/txt_conte"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/comfortaa"
                                    android:scrollHorizontally="true"
                                    android:text="Contenedores"
                                    android:textColor="#FFFFFF"
                                    android:textSize="45dp" />
                            </LinearLayout>

                        </LinearLayout>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/btn_close"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/comfortaa"
                        android:gravity="center_horizontal"
                        android:text="Cerrar Sesión"
                        android:layout_marginBottom="15dp"
                        android:textColor="#0873BA"
                        android:textSize="25dp"
                        android:textStyle="italic" />

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>
            </FrameLayout>




        </LinearLayout>




    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>